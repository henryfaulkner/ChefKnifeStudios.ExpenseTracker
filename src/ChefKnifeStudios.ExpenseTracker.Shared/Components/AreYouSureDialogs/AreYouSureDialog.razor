<div class="are-you-sure-dialog">
    <MatDialog IsOpen="true" IsOpenChanged="HandleOpenChanged">
        <MatDialogTitle>
            @HeaderContent
        </MatDialogTitle>
        <MatDialogContent>
            @BodyContent
        </MatDialogContent>
        <MatDialogActions>
            <MatButton OnClick="HandleNoPressed">NO THANKS</MatButton>
            <MatButton OnClick="HandleYesPressed">OK</MatButton>
        </MatDialogActions>
    </MatDialog>
</div>